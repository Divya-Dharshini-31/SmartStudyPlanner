<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane fx:controller="com.smartstudy.controller.MainController" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <ToolBar>
            <Label text="Smart Study Planner" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnAddTask" text="Add Task" onAction="#onAddTask"/>
            <Button fx:id="btnViewTasks" text="View Tasks" onAction="#onViewTasks"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="12" padding="12">
            <HBox spacing="20">
                <VBox spacing="8">
                    <Label text="Quick Stats" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                    <HBox spacing="12">
                        <VBox>
                            <Label text="Productivity Score"/>
                            <Label fx:id="lblScore" text="0%" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
                        </VBox>
                        <VBox>
                            <Label text="Streak"/>
                            <Label fx:id="lblStreak" text="0 days" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
                        </VBox>
                    </HBox>
                </VBox>

                <VBox spacing="8" prefWidth="600">
                    <Label text="Analytics" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                    <VBox fx:id="chartsBox" spacing="8" />
                </VBox>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <Label text="Made with â™¥ by You" padding="8"/>
    </bottom>
</BorderPane>
